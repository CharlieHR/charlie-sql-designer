<div class="container">
  <div class="row mt-5">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h2>Schemas</h2>
      <div class="d-flex align-items-center justify-content-around">
        <%= link_to "New Schema", new_schema_path, class: "btn btn-primary" %>
      </div>
      <% if @schemas.any? %>
        <table class="table-index mt-3">
          <thead>
            <tr class="text-center">
              <th>Name</th>
              <th>Created at</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
          <% @schemas.each do |schema| %>
            <tr>
              <td class="td-index text-center"><%= schema.name %></td>
              <td class="td-index text-center"><%= schema.created_at.strftime(" %B %e, %Y %l:%M") %></td>
              <td class=" text-center d-flex align-items-center justify-content-around td-index">
                <%= link_to "Open", schema_path(schema), class: "btn btn-primary" %>
                <%= link_to "Edit", edit_schema_path(schema), class: "btn btn-info" %>
                <%= link_to "Destroy", schema_path(schema), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
<i class="mdi mdi-delete"></i>
