		if (index == -1) { this._subscribers[message].push(subscriber); }
	},

	unsubscribe: function(message, subscriber) {
		var index = this._subscribers[message].indexOf(subscriber);
		if (index > -1) { this._subscribers[message].splice(index, 1); }
